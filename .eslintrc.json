{
  "parserOptions": {
    "ecmaVersion": 8,
    "sourceType": "module"
  },
    "env": {
        "node": true,
        "es6": true,
        "mocha": true
    },
    "extends": "eslint:recommended",
    "rules": {
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "semi": [
            "error",
            "always"
        ],
        "prefer-template": [
            "error"
        ],
        "no-unused-vars": [
          "error",
          { "argsIgnorePattern": "ignore" }
        ]
    }
}
